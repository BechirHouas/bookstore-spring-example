<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    
	<persistence-unit name="bookstorePU" transaction-type="RESOURCE_LOCAL">
		<provider>oracle.toplink.essentials.PersistenceProvider</provider>
		<class>com.bookstore.jpa.Author</class>
		<class>com.bookstore.jpa.User</class>
		<class>com.bookstore.jpa.Book</class>
		<class>com.bookstore.jpa.AbstractAuthor</class>
		<class>com.bookstore.jpa.AbstractUser</class>
		<class>com.bookstore.jpa.AbstractBook</class>
		<properties>
			<property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/bookstore" />
			<property name="toplink.jdbc.user" value="root" />
			<property name="toplink.jdbc.password" value="root" />
		</properties>
	</persistence-unit>

</persistence>
